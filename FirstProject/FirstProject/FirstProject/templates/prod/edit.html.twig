{% extends 'base2.html.twig' %}

{% block title %}Edit Products{% endblock %}

{% block body %}

    <h1 >Edit Products</h1>


































    <div class="container" style=" margin: 200px 350px 100px;">
        <div class="au-card recent-report">
            <div class="au-card-inner">
                <section class="dashboard-counts section-padding">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <h3 class="breadcrumb">
                                    <i class="fa fa-plus-square"></i>  Edit Product
                                </h3>
                                <div class="row">
                                    <div class="col-lg-12">
                                        {{ form_start(form, {'method': 'post','attr': {'class': 'prod_edit'}}) }}
                                        <div class="form-group">
                                            <label>title : </label>
                                            {{ form_widget(form.title, {'attr': {'class':'form-control ', 'placeholder': 'libell√©','required' : 'true'}}) }}

                                        </div>



                                        <div class="form-group">
                                            <label>Image  : </label>
                                            {{ form_widget(form.image, {'attr': {'class':'form-control', 'placeholder': 'choisir une Icon','required' : 'true'}}) }}
                                        </div>

                                        <div class="form-group">
                                            <label>price  : </label>
                                            {{ form_widget(form.price, {'attr': {'class':'form-control', 'placeholder': '','required' : 'true'}}) }}
                                        </div>
                                        <div class="form-group">
                                            <label>category: </label>
                                            {{ form_widget(form.category , {'attr': {'class':'form-control', 'placeholder': 'type de formation','required' : 'true'}}) }}
                                        </div>




                                        <button class="btn btn-danger float-right"  type="submit" style="background-color: #0c223a">Edit Item</button>

                                        <button class="btn btn-danger float-right"  type="submit" style="background-color: #0c223a"><a style="color: #FFFFFF" href="{{ path('prod_index') }}">back to list</a></button>






                                        <br/><br/>
                                        {{ form_end(form) }}

                                        {#{{ include('formation/_form.html.twig') }}#}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </div>

{% endblock %}


